<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_margin="4dp"
    android:background="@color/background"
    tools:context=".fragments.FragmentMoviesDetails"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/robert_downey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/nameActorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="0dp"
        android:lineSpacingExtra="0sp"
        android:text="@string/robertDowney"
        android:textColor="@color/textBack"
        app:layout_constraintStart_toStartOf="@id/imageView1"
        app:layout_constraintTop_toBottomOf="@id/imageView1"
        app:layout_constraintEnd_toEndOf="@id/imageView1"
        android:textSize="@dimen/text_for_image">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>